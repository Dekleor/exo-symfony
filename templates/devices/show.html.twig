{% extends 'base.html.twig' %}

{% block title %}Devices{% endblock %}

{% block body %}
    <h1>Devices</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ device.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ device.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ device.price }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ device.brand }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ device.type }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ device.createdAt ? device.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ device.updatedAt ? device.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('devices_index') }}">back to list</a>

    <a href="{{ path('devices_edit', {'id': device.id}) }}">edit</a>

    {{ include('devices/_delete_form.html.twig') }}
{% endblock %}
